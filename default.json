{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "The default preset for all luxass' repositories",
  "timezone": "Europe/Copenhagen",
  "extends": [
    "config:recommended",
    ":labels(dependencies)",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    ":semanticCommitTypeAll(chore)",
    ":disableDependencyDashboard",
    ":disablePeerDependencies"
  ],
  "lockFileMaintenance": {
    "automerge": true,
    "schedule": [
      "before 4am on the first day of the month"
    ]
  },
  "schedule": [
    "before 8am on wednesday"
  ],
  "assignees": [
    "luxass"
  ],
  "internalChecksFilter": "strict",
  "npm": {
    "extends": [
      ":automergePatch",
      ":noUnscheduledUpdates",
      ":separatePatchReleases",
      "helpers:disableTypesNodeMajor"
    ],
    "commitMessageTopic": "{{prettyDepType}} {{depName}}"
  },
  "packageRules": [
    {
      "groupName": "github actions",
      "extractVersion": "^(?<version>v\\d+\\.\\d+\\.\\d+)$",
      "versioning": "regex:^v?(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$",
      "matchManagers": [
        "github-actions"
      ],
      "matchDepTypes": [
        "action"
      ]
    },
    {
      "groupName": "vite dependencies",
      "groupSlug": "vite",
      "matchPackageNames": [
        "vite"
      ],
      "matchPackagePatterns": [
        "^@vitejs/",
        "^vite-"
      ]
    },
    {
      "extends": [
        "packages:linters"
      ],
      "matchPackageNames": [
        "astro-eslint-parser",
        "prettier-plugin-astro",
        "@eslint-react/eslint-plugin",
        "@unocss/eslint-plugin"
      ],
      "groupName": "linters"
    },
    {
      "extends": [
        "packages:test"
      ],
      "matchPackageNames": [
        "c8",
        "happy-dom",
        "jsdom",
        "vitest"
      ],
      "matchPackagePatterns": [
        "^@vitest/"
      ],
      "groupName": "test packages"
    },
    {
      "description": ["disable package.json > engines update"],
      "matchDepTypes": ["engines"],
      "enabled": false
    },
    {
      "matchDepTypes": [
        "packageManager"
      ],
      "schedule": [
        "every 4 months on the first day of the month"
      ],
      "automerge": true
    },
    {
      "description": ["automerge minor updates in devDeps"],
      "automerge": true,
      "matchUpdateTypes": ["minor"],
      "matchDepTypes": ["devDependencies"]
    },
    {
      "schedule": "at any time",
      "minimumReleaseAge": "0",
      "matchPackageNames": [
        "@luxass/eslint-config"
      ]
    }
  ],
  "postUpdateOptions": ["pnpmDedupe"],
  "minimumReleaseAge": "3 days"
}
