{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "The default preset for all luxass' repositories",
  "timezone": "Europe/Copenhagen",
  "extends": [
    "config:recommended",
    ":labels(dependencies)",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    ":semanticCommitTypeAll(chore)",
    ":disableDependencyDashboard",
    ":disablePeerDependencies",
    "group:allNonMajor"
  ],
  "lockFileMaintenance": {
    "automerge": true,
    "schedule": ["before 4am on the first day of the month"]
  },
  "suppressNotifications": [
    "prIgnoreNotification"
  ],
  "prCreation": "not-pending",
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "reviewers": [
      "luxass"
    ]
  },
  "osvVulnerabilityAlerts": true,
  "internalChecksFilter": "strict",
  "npm": {
    "commitMessageTopic": "{{prettyDepType}} {{depName}}"
  },
  "packageRules": [
    {
      "groupName": "github actions",
      "extractVersion": "^(?<version>v\\d+\\.\\d+\\.\\d+)$",
      "versioning": "regex:^v?(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$",
      "pinDigests": true,
      "matchManagers": ["github-actions"],
      "matchDepTypes": ["action"],
      "schedule": ["0 0 1 * *"]
    },
    {
      "groupName": "vite dependencies",
      "groupSlug": "vite",
      "matchPackageNames": ["vite"],
      "matchPackagePatterns": ["^@vitejs/", "^vite-"]
    },
    {
      "extends": ["packages:linters"],
      "matchPackageNames": [
        "astro-eslint-parser",
        "prettier-plugin-astro",
        "@eslint-react/eslint-plugin",
        "@unocss/eslint-plugin"
      ],
      "groupName": "linters",
      "schedule": ["* * 1 * *"]
    },
    {
      "extends": ["packages:test"],
      "matchPackageNames": ["c8", "happy-dom", "jsdom", "vitest"],
      "matchPackagePatterns": ["^@vitest/"],
      "groupName": "test packages"
    },
    {
      "matchPackageNames": [
        "taiki-e/install-action"
      ],
      "schedule": ["0 0 */15 * *"],
      "description": "slow down updates for some actions"
    },
    {
      "description": ["disable package.json > engines update"],
      "matchDepTypes": ["engines"],
      "enabled": false
    },
    {
      "matchDepTypes": ["packageManager"],
      "schedule": ["* * 1 * *"],
      "automerge": true
    },
    {
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "7 days"
    }
  ],
  "postUpdateOptions": ["pnpmDedupe"],
  "automergeStrategy": "squash",
  "automergeType": "branch"
}
