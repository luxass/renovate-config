{
  "description": "Default config for luxass' projects",
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    "schedule:weekly",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)"
  ],
  "rangeStrategy": "bump",
  "npm": {
    "commitMessageTopic": "{{prettyDepType}} {{depName}}"
  },
  "packageRules": [
    {
      "depTypeList": [
        "peerDependencies"
      ],
      "enabled": false
    }
  ]
}
