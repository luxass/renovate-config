{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "The default preset for all luxass' repositories",
  "timezone": "Europe/Copenhagen",
  "extends": [
    "config:recommended",
    ":labels(dependencies)",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    ":semanticCommitTypeAll(chore)",
    ":disableDependencyDashboard",
    ":disablePeerDependencies",
    "group:allNonMajor"
  ],
  "lockFileMaintenance": {
    "automerge": true,
    "schedule": ["before 4am on the first day of the month"]
  },
  "suppressNotifications": [
    "prIgnoreNotification"
  ],
  "prCreation": "not-pending",
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "reviewers": [
      "luxass"
    ]
  },
  "osvVulnerabilityAlerts": true,
  "internalChecksFilter": "strict",
  "npm": {
    "commitMessageTopic": "{{prettyDepType}} {{depName}}",
    "minimumReleaseAge": "7 days"
  },
  "github-actions": {
    "extractVersion": "^(?<version>v\\d+\\.\\d+\\.\\d+)$",
    "versioning": "regex:^v?(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$",
    "pinDigests": true
  },
  "packageRules": [
    {
      "description": "monthly github action updates on 1st at midnight",
      "groupName": "github actions",
      "matchManagers": ["github-actions"],
      "matchDepTypes": ["action"],
      "schedule": ["* 0 1 * *"]
    },
    {
      "description": "slow down updates for specific actions",
      "matchPackageNames": [
        "taiki-e/install-action"
      ],
      "schedule": ["* * */15 * *"]
    },
    {
      "groupName": "vite dependencies",
      "groupSlug": "vite",
      "matchPackageNames": [
        "vite",
        "/^@vitejs//",
        "/^vite-/"
      ]
    },
    {
      "extends": ["packages:linters"],
      "matchPackageNames": [
        "astro-eslint-parser",
        "prettier-plugin-astro",
        "@eslint-react/eslint-plugin",
        "@unocss/eslint-plugin"
      ],
      "groupName": "linters",
      "schedule": ["* * 1 * *"]
    },
    {
      "extends": ["packages:test"],
      "matchPackageNames": [
        "c8",
        "happy-dom",
        "jsdom",
        "vitest",
        "/^@vitest//"
      ],
      "groupName": "test packages"
    },
    {
      "description": ["disable package.json > engines update"],
      "matchDepTypes": ["engines"],
      "enabled": false
    },
    {
      "matchDepTypes": ["packageManager"],
      "schedule": ["* * 1 * *"],
      "automerge": true
    }
  ],
  "postUpdateOptions": ["pnpmDedupe"],
  "automergeStrategy": "squash",
  "automergeType": "branch"
}
